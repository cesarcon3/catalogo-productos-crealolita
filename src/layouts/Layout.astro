---
import siteConfig from '../config/site-config.json';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article' | 'product';
  noIndex?: boolean;
  h1?: string; // Nueva prop para el H1 específico de cada página
}

const { 
  title, 
  description = siteConfig.defaultDescription,
  image = siteConfig.defaultImage,
  type = 'website',
  noIndex = false,
  h1 // H1 específico para la página
} = Astro.props;

// Construir título completo
const fullTitle = title 
  ? siteConfig.seo.titleTemplate.replace('%s', title)
  : siteConfig.seo.defaultTitle;

// H1 por defecto si no se proporciona uno específico
const pageH1 = h1 || title || siteConfig.business.name;

// Mejorar descripción meta si es muy genérica
const improvedDescription = description.length < 120 
  ? `${description} - ${siteConfig.business.name} ofrece productos artesanales únicos y de calidad superior.`
  : description;

// URL completa para meta tags
const canonicalUrl = new URL(Astro.url.pathname, siteConfig.siteUrl).toString();
const fullImageUrl = new URL(image, siteConfig.siteUrl).toString();

// Robots meta
const robotsContent = noIndex ? 'noindex, nofollow' : siteConfig.seo.robots;

// Schema.org JSON-LD para organización
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": siteConfig.business.type,
  "name": siteConfig.business.name,
  "legalName": siteConfig.business.legalName,
  "description": siteConfig.business.description,
  "url": siteConfig.siteUrl,
  "logo": new URL(siteConfig.images.logo, siteConfig.siteUrl).toString(),
  "image": fullImageUrl,
  "foundingDate": siteConfig.business.foundingDate,
  "priceRange": siteConfig.business.priceRange,
  "paymentAccepted": siteConfig.business.paymentAccepted,
  "currenciesAccepted": siteConfig.business.currenciesAccepted,
  "sameAs": siteConfig.business.sameAs,
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": siteConfig.business.contactPoint.telephone,
    "contactType": siteConfig.business.contactPoint.contactType,
    "availableLanguage": siteConfig.business.contactPoint.availableLanguage
  },
  "address": {
    "@type": "PostalAddress",
    "addressCountry": siteConfig.business.address.addressCountry,
    "addressRegion": siteConfig.business.address.addressRegion
  },
  "openingHours": Object.entries(siteConfig.business.hours).map(([day, hours]) => 
    hours !== "closed" ? `${day.charAt(0).toUpperCase() + day.slice(1)} ${hours}` : null
  ).filter(Boolean)
};

// WhatsApp URL
const whatsappUrl = `https://api.whatsapp.com/send?phone=${siteConfig.whatsapp.number}&text=${encodeURIComponent(siteConfig.whatsapp.message)}`;
---

<!DOCTYPE html>
<html lang={siteConfig.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- SEO Básico -->
    <title>{fullTitle}</title>
    <meta name="description" content={improvedDescription} />
    <meta name="keywords" content={siteConfig.seo.keywords.join(', ')} />
    <meta name="author" content={siteConfig.seo.author} />
    <meta name="creator" content={siteConfig.seo.creator} />
    <meta name="publisher" content={siteConfig.seo.publisher} />
    <meta name="robots" content={robotsContent} />
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={improvedDescription} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:image:alt" content={siteConfig.images.ogImageAlt} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:site_name" content={siteConfig.siteName} />
    <meta property="og:locale" content={siteConfig.locale} />
    {siteConfig.analytics.facebookAppId && (
      <meta property="fb:app_id" content={siteConfig.analytics.facebookAppId} />
    )}
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@crealolita" />
    <meta name="twitter:creator" content="@crealolita" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={improvedDescription} />
    <meta name="twitter:image" content={fullImageUrl} />
    <meta name="twitter:image:alt" content={siteConfig.images.ogImageAlt} />
    
    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href={siteConfig.images.favicon} />
    <link rel="apple-touch-icon" href={siteConfig.images.appleTouchIcon} />
    <link rel="mask-icon" href={siteConfig.images.favicon} color={siteConfig.images.maskIconColor} />
    
    <!-- Verificaciones de motores de búsqueda -->
    {siteConfig.seo.googleSiteVerification && (
      <meta name="google-site-verification" content={siteConfig.seo.googleSiteVerification} />
    )}
    {siteConfig.seo.bingVerification && (
      <meta name="msvalidate.01" content={siteConfig.seo.bingVerification} />
    )}
    {siteConfig.seo.yandexVerification && (
      <meta name="yandex-verification" content={siteConfig.seo.yandexVerification} />
    )}
    
    <!-- FontAwesome para el botón de WhatsApp -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />
    
    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    
    <!-- Analytics -->
    {siteConfig.analytics.googleAnalytics && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${siteConfig.analytics.googleAnalytics}`}></script>
        <script is:inline>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', `${siteConfig.analytics.googleAnalytics}`);
        </script>
      </>
    )}
    
    {siteConfig.analytics.googleTagManager && (
      <script is:inline set:html={`
        (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
        new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
        'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer','${siteConfig.analytics.googleTagManager}');
      `} />
    )}
    
    <style>
      :root {
        /* Paleta de colores principal */
        --cream-1: #F5F5DC;  /* Base */
        --cream-2: #FFF8E1;  /* Cards */
        --cream-3: #FAF3E0;  /* Backgrounds */
        --gold: #D4AF37;     /* Accents */
        --gold-dark: #B8941F; /* Gold hover */
        --gold-light: #E5C547;     /* Hover effects suaves */
        --gold-ultra-light: #F2E8B8
        
        /* Colores de texto */
        --text: #3D3D3D;
        --text-light: #6B6B6B;
        --text-on-gold: #FFFFFF;
        
        /* Otros */
        --border: #E8D7C3;
        --shadow: rgba(212, 175, 55, 0.15);
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html {
        font-family: 'Georgia', 'Times New Roman', serif;
        background: var(--cream-1);
        color: var(--text);
      }
      
      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }
      
      header {
        background: linear-gradient(135deg, var(--gold) 0%, var(--gold-dark) 100%);
        color: var(--text-on-gold);
        padding: 1.5rem 0;
        box-shadow: 0 2px 15px var(--shadow);
        position: relative;
        overflow: hidden;
      }
      
      header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        border-radius: 50%;
      }

      .header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: relative;
        z-index: 1;
      }

      .logo {
        height: 50px;
        width: auto;
        max-width: 410px;
        object-fit: contain;
        filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.1));
      }

      .brand-text {
        text-align: right;
        flex: 1;
        margin-left: 2rem;
      }
      
      /* Removemos el h1 del header para evitar duplicados */
      .header-subtitle {
        margin-top: 0.5rem;
        opacity: 0.95;
        font-size: 0.95rem;
        font-style: italic;
      }

      @media (max-width: 768px) {
        .header-content {
          flex-direction: column;
          gap: 0.8rem;
          text-align: center;
        }

        .logo {
          height: 50px;
          max-width: 220px;
        }

        .brand-text {
          text-align: center;
          margin-left: 0;
        }
      }

      @media (max-width: 480px) {
        .logo {
          height: 28px;
          max-width: 180px;
        }

        .header-subtitle {
          font-size: 0.85rem;
        }
      }
      
      main {
        flex: 1;
        padding: 2rem 0;
        background: var(--cream-1);
      }

      /* Estilos para el H1 principal de la página */
      .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--gold-dark);
        text-align: center;
        margin-bottom: 2rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        line-height: 1.2;
      }

      @media (max-width: 768px) {
        .page-title {
          font-size: 2rem;
          margin-bottom: 1.5rem;
        }
      }

      @media (max-width: 480px) {
        .page-title {
          font-size: 1.7rem;
          margin-bottom: 1rem;
        }
      }
      
      footer {
        background: var(--cream-3);
        border-top: 2px solid var(--gold);
        padding: 2rem 0;
        margin-top: 4rem;
      }
      
      footer .container {
        text-align: center;
        color: var(--text-light);
      }
      
      footer p {
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
      }
      
      .social-links {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        margin-top: 1rem;
      }
      
      .social-links a {
        color: var(--text-light);
        text-decoration: none;
        transition: all 0.3s;
        font-size: 0.95rem;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        background: var(--cream-2);
      }
      
      .social-links a:hover {
        color: var(--gold-dark);
        background: var(--gold-ultra-light);
        transform: translateY(-2px);
      }
      
      /* Botón flotante de WhatsApp */
      .whatsapp {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 60px;
        height: 60px;
        background: #25D366;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 20px rgba(37, 211, 102, 0.4);
        z-index: 1000;
        transition: all 0.3s ease;
        text-decoration: none;
        animation: whatsapp-pulse 2s infinite;
      }

      .whatsapp:hover {
        transform: scale(1.1);
        box-shadow: 0 6px 25px rgba(37, 211, 102, 0.6);
        background: #128C7E;
      }

      .whatsapp i {
        color: white;
        font-size: 28px;
      }

      @keyframes whatsapp-pulse {
        0% {
          box-shadow: 0 4px 20px rgba(37, 211, 102, 0.4);
        }
        50% {
          box-shadow: 0 4px 25px rgba(37, 211, 102, 0.7);
        }
        100% {
          box-shadow: 0 4px 20px rgba(37, 211, 102, 0.4);
        }
      }

      @media (max-width: 768px) {
        .whatsapp {
          bottom: 15px;
          right: 15px;
          width: 55px;
          height: 55px;
        }

        .whatsapp i {
          font-size: 24px;
        }
      }
      
      /* Estilos globales para botones */
      :global(.btn-primary) {
        background: linear-gradient(135deg, var(--gold) 0%, var(--gold-dark) 100%);
        color: white;
        padding: 12px 24px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
        display: inline-block;
        box-shadow: 0 4px 15px var(--shadow);
      }
      
      :global(.btn-primary:hover) {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px var(--shadow);
      }
    </style>
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    {siteConfig.analytics.googleTagManager && (
      <noscript>
        <iframe src={`https://www.googletagmanager.com/ns.html?id=${siteConfig.analytics.googleTagManager}`}
          height="0" width="0" style="display:none;visibility:hidden"></iframe>
      </noscript>
    )}
    
    <header>
      <div class="container">
        <div class="header-content">
          <a href="/">
            <img src={siteConfig.images.logo} alt={siteConfig.images.logoAlt} class="logo" />
          </a>
          <div class="brand-text">
            <p class="header-subtitle">{siteConfig.business.description}</p>
          </div>
        </div>
      </div>
    </header>
    
    <main>
      <div class="container">
        <!-- H1 principal de la página -->
        <h1 class="page-title">{pageH1}</h1>
        
        <slot />
      </div>
    </main>
    
    <footer>
      <div class="container">
        <p>© 2025 {siteConfig.business.name}. Todos los derechos reservados.</p>
        <p>Productos artesanales con amor 💛</p>
        <div class="social-links">
          <a href={whatsappUrl} target="_blank" rel="noopener noreferrer">WhatsApp</a>
          {siteConfig.social.instagram && (
            <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer">Instagram</a>
          )}
          {siteConfig.social.facebook && (
            <a href={siteConfig.social.facebook} target="_blank" rel="noopener noreferrer">Facebook</a>
          )}
          {siteConfig.social.tiktok && (
            <a href={siteConfig.social.tiktok} target="_blank" rel="noopener noreferrer">TikTok</a>
          )}
        </div>
      </div>
    </footer>

    <!-- Botón flotante de WhatsApp -->
    <a 
      aria-label="Contactar por WhatsApp" 
      href={whatsappUrl} 
      class="whatsapp" 
      target="_blank" 
      rel="noopener noreferrer"
    >
      <i class="fa-brands fa-whatsapp"></i>
    </a>

    <!-- Script para ocultar barra de URL en móviles -->
    <script type="application/x-javascript">
      addEventListener("load", function() {
        setTimeout(hideURLbar, 0);
      }, false);
      
      function hideURLbar() {
        window.scrollTo(0, 1);
      }
    </script>
  </body>
</html>