---
export interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article' | 'product';
  noIndex?: boolean;
  h1?: string;
}

const { 
  title, 
  description = 'Especialistas en productos personalizados en MDF con corte y grabado láser. Creamos piezas únicas y artesanales para decoración y regalos en Venezuela.',
  image = '/og-image.jpg',
  type = 'website',
  noIndex = false,
  h1
} = Astro.props;

// Construir título completo
const fullTitle = title 
  ? `${title} | Creaciones Lolita`
  : 'Creaciones Lolita - Corte y Grabado Láser en MDF';

// H1 por defecto si no se proporciona uno específico
const pageH1 = h1 || title || 'Creaciones Lolita';

// Mejorar descripción meta si es muy genérica
const improvedDescription = description.length < 120 
  ? `${description} - Creaciones Lolita ofrece productos artesanales únicos y de calidad superior.`
  : description;

// URLs completas para meta tags
const canonicalUrl = new URL(Astro.url.pathname, 'https://creacioneslolita.com').toString();
const fullImageUrl = new URL(image, 'https://creacioneslolita.com').toString();

// Robots meta
const robotsContent = noIndex ? 'noindex, nofollow' : 'index, follow';

// WhatsApp URL
const whatsappUrl = `https://api.whatsapp.com/send?phone=584161452966&text=${encodeURIComponent('Hola, me gustaría obtener información acerca de')}`;

// Schema.org JSON-LD
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Creaciones Lolita",
  "legalName": "Creaciones Lolita",
  "description": "Especialistas en productos personalizados en MDF con corte y grabado láser de alta precisión. Creamos piezas únicas y artesanales para decoración, regalos y proyectos especiales.",
  "url": "https://creacioneslolita.com",
  "logo": new URL('/logo.webp', 'https://creacioneslolita.com').toString(),
  "image": fullImageUrl,
  "foundingDate": "2020",
  "priceRange": "$$",
  "paymentAccepted": ["Cash", "Credit Card", "Debit Card", "Bank Transfer", "Mobile Payment"],
  "currenciesAccepted": "USD,VES",
  "sameAs": [
    "https://www.instagram.com/crealolita/",
    "https://www.facebook.com/people/Crealolita-Diseños-Personalizados-Regalos-Creativos/61578079074035/"
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+58-416-145-2966",
    "contactType": "customer service",
    "availableLanguage": "Spanish"
  },
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "VE",
    "addressRegion": "Venezuela"
  },
  "openingHours": [
    "Monday 09:00-18:00",
    "Tuesday 09:00-18:00", 
    "Wednesday 09:00-18:00",
    "Thursday 09:00-18:00",
    "Friday 09:00-18:00",
    "Saturday 09:00-14:00"
  ]
};
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- SEO Básico -->
    <title>{fullTitle}</title>
    <meta name="description" content={improvedDescription} />
    <meta name="keywords" content="corte láser MDF, grabado láser Venezuela, productos personalizados MDF, decoración láser, regalos personalizados, artesanías MDF, corte CNC Venezuela, diseños personalizados, creaciones artesanales, productos únicos Venezuela" />
    <meta name="author" content="Creaciones Lolita" />
    <meta name="creator" content="Creaciones Lolita" />
    <meta name="publisher" content="Creaciones Lolita" />
    <meta name="robots" content={robotsContent} />
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={improvedDescription} />
    <meta property="og:image" content={fullImageUrl} />
