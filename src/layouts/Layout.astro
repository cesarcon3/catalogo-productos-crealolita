---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Cat√°logo de productos personalizados en MDF - Creaciones Lolita" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Creaciones Lolita</title>
    
    <style>
      :root {
        /* Colores Base - Tonos Crema */
        --cream-1: #FAF7F2;
        --cream-2: #FFF9F0;
        --cream-3: #F5EDE0;
        
        /* Colores Acento - Dorados */
        --gold: #C9A961;
        --gold-dark: #A68B4A;
        --gold-light: #E4D4A8;
        
        /* Colores Rosa */
        --soft-pink: #F4C2C2;
        --soft-pink-light: #FDE8E8;
        --soft-pink-dark: #E8A0A0;
        
        /* Colores de Texto */
        --text: #2C2416;
        --text-light: #5C4E3C;
        --text-muted: #8B7355;
        --text-on-gold: #FFFFFF;
        
        /* Utilidades */
        --border: #E8D7C3;
        --shadow-gold: rgba(201, 169, 97, 0.15);
        --shadow-pink: rgba(244, 194, 194, 0.12);
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html {
        font-family: 'Georgia', 'Times New Roman', serif;
        background: var(--cream-1);
        color: var(--text);
      }
      
      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }
      
      header {
        background: linear-gradient(135deg, var(--gold) 0%, var(--gold-dark) 100%);
        color: var(--text-on-gold);
        padding: 1.5rem 0;
        box-shadow: 0 2px 15px var(--shadow-gold);
        position: relative;
        overflow: hidden;
      }
      
      header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        border-radius: 50%;
      }
      
      header h1 {
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        position: relative;
        z-index: 1;
        letter-spacing: 1px;
      }
      
      header .subtitle {
        text-align: center;
        margin-top: 0.5rem;
        opacity: 0.95;
        font-size: 0.95rem;
        font-style: italic;
        position: relative;
        z-index: 1;
      }
      
      main {
        flex: 1;
        padding: 2rem 0;
        background: var(--cream-1);
      }
      
      footer {
        background: var(--cream-3);
        border-top: 2px solid var(--gold-light);
        padding: 2rem 0;
        margin-top: 4rem;
      }
      
      footer .container {
        text-align: center;
        color: var(--text-light);
      }
      
      footer p {
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
      }
      
      .social-links {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        margin-top: 1rem;
      }
      
      .social-links a {
        color: var(--text-light);
        text-decoration: none;
        transition: all 0.3s;
        font-size: 0.95rem;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        background: var(--cream-2);
        border: 1px solid var(--border);
      }
      
      .social-links a:hover {
        color: var(--gold-dark);
        background: var(--soft-pink-light);
        transform: translateY(-2px);
        border-color: var(--soft-pink);
      }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <h1>‚ú® Creaciones Lolita ‚ú®</h1>
        <p class="subtitle">Arte en MDF ‚Ä¢ Corte y Grabado L√°ser ‚Ä¢ Dise√±os Personalizados</p>
      </div>
    </header>
    
    <main>
      <div class="container">
        <slot />
      </div>
    </main>
    
    <footer>
      <div class="container">
        <p>¬© 2024 Creaciones Lolita. Todos los derechos reservados.</p>
        <p>Cada pieza hecha con amor y dedicaci√≥n üíù</p>
        <div class="social-links">
          <a href="#">WhatsApp</a>
          <a href="#">Instagram</a>
          <a href="#">Facebook</a>
        </div>
      </div>
    </footer>
  </body>
</html>