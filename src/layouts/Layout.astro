---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Catálogo de productos en MDF con corte y grabado láser" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- FontAwesome para el botón de WhatsApp -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Creaciones Lolita</title>
    
    <style>
      :root {
        /* Paleta de colores principal */
        --cream-1: #F5F5DC;  /* Base */
        --cream-2: #FFF8E1;  /* Cards */
        --cream-3: #FAF3E0;  /* Backgrounds */
        --gold: #D4AF37;     /* Accents */
        --gold-dark: #B8941F; /* Gold hover */
        --gold-light: #E5C547;     /* Hover effects suaves */
        --gold-ultra-light: #F2E8B8
        
        /* Colores de texto */
        --text: #3D3D3D;
        --text-light: #6B6B6B;
        --text-on-gold: #FFFFFF;
        
        /* Otros */
        --border: #E8D7C3;
        --shadow: rgba(212, 175, 55, 0.15);
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html {
        font-family: 'Georgia', 'Times New Roman', serif;
        background: var(--cream-1);
        color: var(--text);
      }
      
      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }
      
      header {
        background: linear-gradient(135deg, var(--gold) 0%, var(--gold-dark) 100%);
        color: var(--text-on-gold);
        padding: 1.5rem 0;
        box-shadow: 0 2px 15px var(--shadow);
        position: relative;
        overflow: hidden;
      }
      
      header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        border-radius: 50%;
      }

      .header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: relative;
        z-index: 1;
      }

      .logo {
        height: 50px;
        width: auto;
        max-width: 410px;
        object-fit: contain;
        filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.1));
      }

      .brand-text {
        text-align: right;
        flex: 1;
        margin-left: 2rem;
      }
      
      header h1 {
        font-size: 1.8rem;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        margin: 0;
      }
      
      header p {
        margin-top: 0.5rem;
        opacity: 0.95;
        font-size: 0.95rem;
        font-style: italic;
      }

      @media (max-width: 768px) {
        .header-content {
          flex-direction: column;
          gap: 0.8rem;
          text-align: center;
        }

        .logo {
          height: 32px;
          max-width: 220px;
        }

        .brand-text {
          text-align: center;
          margin-left: 0;
        }

        header h1 {
          font-size: 1.5rem;
        }
      }

      @media (max-width: 480px) {
        .logo {
          height: 28px;
          max-width: 180px;
        }

        header h1 {
          font-size: 1.3rem;
        }

        header p {
          font-size: 0.85rem;
        }
      }
      
      main {
        flex: 1;
        padding: 2rem 0;
        background: var(--cream-1);
      }
      
      footer {
        background: var(--cream-3);
        border-top: 2px solid var(--gold);
        padding: 2rem 0;
        margin-top: 4rem;
      }
      
      footer .container {
        text-align: center;
        color: var(--text-light);
      }
      
      footer p {
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
      }
      
      .social-links {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        margin-top: 1rem;
      }
      
      .social-links a {
        color: var(--text-light);
        text-decoration: none;
        transition: all 0.3s;
        font-size: 0.95rem;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        background: var(--cream-2);
      }
      
      .social-links a:hover {
        color: var(--gold-dark);
        background: var(--gold-ultra-light);
        transform: translateY(-2px);
      }
      
      /* Botón flotante de WhatsApp */
      .whatsapp {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 60px;
        height: 60px;
        background: #25D366;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 20px rgba(37, 211, 102, 0.4);
        z-index: 1000;
        transition: all 0.3s ease;
        text-decoration: none;
        animation: whatsapp-pulse 2s infinite;
      }

      .whatsapp:hover {
        transform: scale(1.1);
        box-shadow: 0 6px 25px rgba(37, 211, 102, 0.6);
        background: #128C7E;
      }

      .whatsapp i {
        color: white;
        font-size: 28px;
      }

      @keyframes whatsapp-pulse {
        0% {
          box-shadow: 0 4px 20px rgba(37, 211, 102, 0.4);
        }
        50% {
          box-shadow: 0 4px 25px rgba(37, 211, 102, 0.7);
        }
        100% {
          box-shadow: 0 4px 20px rgba(37, 211, 102, 0.4);
        }
      }

      @media (max-width: 768px) {
        .whatsapp {
          bottom: 60px;
          right: 15px;
          width: 55px;
          height: 55px;
        }

        .whatsapp i {
          font-size: 24px;
        }
      }
      
      /* Estilos globales para botones */
      :global(.btn-primary) {
        background: linear-gradient(135deg, var(--gold) 0%, var(--gold-dark) 100%);
        color: white;
        padding: 12px 24px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
        display: inline-block;
        box-shadow: 0 4px 15px var(--shadow);
      }
      
      :global(.btn-primary:hover) {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px var(--shadow);
      }
    </style>
  </head>
  <body>
   <header>
  <div class="container">
    <div class="header-content">
      <a href="/">
        <img src="/logo.webp" alt="Logo Creaciones Lolita" class="logo" />
      </a>
      <div class="brand-text">
        <!-- <h1>Creaciones Lolita</h1> -->
        <p>Productos personalizados en MDF con corte y grabado láser</p>
      </div>
    </div>
  </div>
</header>
    
    <main>
      <div class="container">
        <slot />
      </div>
    </main>
    
    <footer>
      <div class="container">
        <p>© 2025 Creaciones Lolita. Todos los derechos reservados.</p>
        <p>Productos artesanales con amor 💛</p>
        <div class="social-links">
          <a href="https://api.whatsapp.com/send?phone=584161452966&text=Hola%2C%20me%20gustar%C3%ADa%20obtener%20informaci%C3%B3n%20acerca%20de%20" target="_blank" rel="noopener noreferrer">WhatsApp</a>
          <a href="https://www.instagram.com/crealolita/" target="_blank" rel="noopener noreferrer">Instagram</a>
          <a href="https://www.facebook.com/people/Crealolita-Dise%C3%B1os-Personalizados-Regalos-Creativos/61578079074035/" target="_blank" rel="noopener noreferrer">Facebook</a>
        </div>
      </div>
    </footer>

    <!-- Botón flotante de WhatsApp -->
    <a aria-label="Whatsapp" href="https://api.whatsapp.com/send?phone=584161452966&text=Hola%2C%20me%20gustar%C3%ADa%20obtener%20informaci%C3%B3n%20acerca%20de%20" class="whatsapp" target="_blank">
      <i class="fa-brands fa-whatsapp"></i>
    </a>

    <!-- Script para ocultar barra de URL en móviles -->
    <script type="application/x-javascript">
      addEventListener("load", function() {
        setTimeout(hideURLbar, 0);
      }, false);
      
      function hideURLbar() {
        window.scrollTo(0, 1);
      }
    </script>
  </body>
</html>