---
// src/layouts/BaseLayout.astro
import SEOHead from '../components/SEOHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import { SITE_CONFIG } from '../config/site.ts';
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article' | 'product';
  noIndex?: boolean;
  h1?: string;
}

const props = Astro.props;

// H1 por defecto si no se proporciona uno específico
const pageH1 = props.h1 || props.title || SITE_CONFIG.name;
---

<!DOCTYPE html>
<html lang="es">
  <SEOHead {...props} />
  
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe src="https://www.googletagmanager.com/ns.html?id=G-BG38JKHZDP"
        height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    
    <Header />
    
    <main>
      <div class="container">
        <!-- H1 principal de la página -->
        <h1 class="page-title">{pageH1}</h1>
        
        <slot />
      </div>
    </main>
    
    <Footer />
    <WhatsAppButton />

    <!-- Script para ocultar barra de URL en móviles -->
    <script type="application/x-javascript">
      addEventListener("load", function() {
        setTimeout(hideURLbar, 0);
      }, false);
      
      function hideURLbar() {
        window.scrollTo(0, 1);
      }
    </script>
  </body>
</html>