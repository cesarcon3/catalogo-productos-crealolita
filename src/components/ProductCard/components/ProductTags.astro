---
export interface Props {
  tags: string[];
  maxTags?: number;
}

const { tags, maxTags = 3 } = Astro.props;
---

{tags.length > 0 && (
  <div class="tags">
    {tags.slice(0, maxTags).map(tag => (
      <span class="tag">#{tag}</span>
    ))}
  </div>
)}

<style>
  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }
  
  .tag {
    font-size: 0.75rem;
    color: #2D2416;
    background: #F5F0E8;
    padding: 4px 10px;
    border-radius: 15px;
    font-weight: 500;
  }
</style>
