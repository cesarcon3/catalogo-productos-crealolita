---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Props {
  imageImport: ImageMetadata | null;
  nombre: string;
  hasHoverEffect?: boolean;
}

const { imageImport, nombre, hasHoverEffect = true } = Astro.props;
---

<div class="image-container">
  {imageImport ? (
    <Image 
      src={imageImport}
      alt={nombre}
      width={400}
      height={300}
      loading="lazy"
      class={`product-image ${hasHoverEffect ? 'hover-effect' : ''}`}
      format="webp"
      quality={85}
    />
  ) : (
    <div class="placeholder-image">
      <span>Imagen pr√≥ximamente</span>
    </div>
  )}
</div>

<style>
  .image-container {
    width: 100%;
    height: 250px;
    overflow: hidden;
    background: var(--cream, #FFF8F0);
    position: relative;
  }
  
  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }
  
  .product-image.hover-effect {
    transition: transform 0.4s ease;
  }
  
  .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--beige, #F5E6D3), var(--cream, #FFF8F0));
    color: var(--brown-light, #6B4E3D);
    font-family: 'Open Sans', sans-serif;
    font-size: 1rem;
    font-weight: 500;
  }
</style>
