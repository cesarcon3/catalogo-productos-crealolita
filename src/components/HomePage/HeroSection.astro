---
export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "✨ Productos Únicos en MDF",
  description = "Cada pieza es diseñada y elaborada con dedicación para hacer tu evento inolvidable"
} = Astro.props;
---

<section class="hero">
  <div class="hero-content">
    <h2>{title}</h2>
    <p>{description}</p>
  </div>
  <div class="hero-decoration">
    <!-- Decoration elements can be added here -->
  </div>
</section>

<style>
  .hero {
    text-align: center;
    padding: 3rem 2rem;
    background: linear-gradient(135deg, var(--gold, #D4AF37), var(--gold-dark, #B8941F));
    border-radius: 20px;
    margin-bottom: 3rem;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(212, 175, 55, 0.1);
  }

  .hero::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -10%;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
    border-radius: 50%;
  }

  .hero::after {
    content: '';
    position: absolute;
    bottom: -30%;
    right: -5%;
    width: 150px;
    height: 150px;
    background: radial-gradient(circle, rgba(248, 200, 220, 0.2) 0%, transparent 70%);
    border-radius: 50%;
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .hero h2 {
    font-size: 2.5rem;
    color: white;
    margin-bottom: 1rem;
    font-family: 'Georgia', serif;
    font-weight: 700;
  }

  .hero p {
    font-size: 1.15rem;
    color: white;
    max-width: 600px;
    margin: 0 auto;
    font-family: 'Georgia', serif;
    font-style: italic;
  }

  .hero-decoration {
    margin-top: 2rem;
    display: flex;
    justify-content: center;
    gap: 2rem;
  }

  .decoration-element {
    font-size: 2rem;
    animation: float 3s ease-in-out infinite;
    animation-delay: calc(var(--i, 0) * 0.3s);
  }

  .decoration-element:nth-child(1) { --i: 0; }
  .decoration-element:nth-child(2) { --i: 1; }
  .decoration-element:nth-child(3) { --i: 2; }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  @media (max-width: 768px) {
    .hero h2 {
      font-size: 2rem;
    }

    .hero-decoration {
      gap: 1rem;
    }

    .decoration-element {
      font-size: 1.5rem;
    }
  }
</style>
