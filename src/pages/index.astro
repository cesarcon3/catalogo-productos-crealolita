import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import fs from 'fs';
import path from 'path';

// Obtener todos los productos
const productosDir = path.join(process.cwd(), 'src/content/productos');
const productos = [];

// Leer cada carpeta de producto
const carpetas = fs.readdirSync(productosDir).filter(item => {
  const itemPath = path.join(productosDir, item);
  return fs.statSync(itemPath).isDirectory();
});

for (const carpeta of carpetas) {
  const infoPath = path.join(productosDir, carpeta, 'info.json');
  
  if (fs.existsSync(infoPath)) {
    const info = JSON.parse(fs.readFileSync(infoPath, 'utf-8'));
    
    // Obtener las im√°genes disponibles
    const productPath = path.join(productosDir, carpeta);
    const archivos = fs.readdirSync(productPath);
    const imagenes = archivos
      .filter(file => file.match(/\.(jpg|jpeg|png|webp)$/i))
      .sort((a, b) => {
        const numA = parseInt(a.match(/\d+/)?.[0] || '0');
        const numB = parseInt(b.match(/\d+/)?.[0] || '0');
        return numA - numB;
      });
    
    productos.push({
      ...info,
      carpeta,
      primerImagen: imagenes[0] || '1.jpg'
    });
  }
}

// Ordenar productos: destacados primero, luego por nombre
productos.sort((a, b) => {
  if (a.destacado && !b.destacado) return -1;
  if (!a.destacado && b.destacado) return 1;
  return a.nombre.localeCompare(b.nombre);
});

// Agrupar por categor√≠as
const categorias = {
  quinceanos: productos.filter(p => p.categoria === 'quinceanos'),
  otros: productos.filter(p => p.categoria !== 'quinceanos')
};
---

<Layout title="Cat√°logo de Productos">
  <!-- Hero Section -->
  <section class="hero">
    <h2>‚ú® Productos √önicos en MDF</h2>
    <p>Cada pieza es dise√±ada y elaborada con dedicaci√≥n para hacer tu evento especial</p>
  </section>

  <!-- Productos Destacados -->
  {productos.some(p => p.destacado) && (
    <section class="productos-section">
      <h2 class="section-title">‚≠ê Productos Destacados</h2>
      <div class="productos-grid">
        {productos
          .filter(p => p.destacado)
          .map(producto => (
            <ProductCard
              id={producto.id}
              nombre={producto.nombre}
              precio={producto.precio}
              moneda={producto.moneda}
              descripcion={producto.descripcion}
              imagen={producto.primerImagen}
              destacado={producto.destacado}
              tags={producto.tags}
            />
          ))}
      </div>
    </section>
  )}

  <!-- Productos para Quincea√±os -->
  {categorias.quinceanos.length > 0 && (
    <section class="productos-section">
      <h2 class="section-title">üëë Especial Quincea√±eras</h2>
      <p class="section-description">
        Recuerdos perfectos para ese d√≠a tan especial. Personalizamos cada detalle con el nombre y fecha de tu evento.
      </p>
      <div class="productos-grid">
        {categorias.quinceanos.map(producto => (
          <ProductCard
            id={producto.id}
            nombre={producto.nombre}
            precio={producto.precio}
            moneda={producto.moneda}
            descripcion={producto.descripcion}
            imagen={producto.primerImagen}
            destacado={producto.destacado}
            tags={producto.tags}
          />
        ))}
      </div>
    </section>
  )}

  <!-- Otros Productos -->
  {categorias.otros.length > 0 && (
    <section class="productos-section">
      <h2 class="section-title">üé® M√°s Productos</h2>
      <div class="productos-grid">
        {categorias.otros.map(producto => (
          <ProductCard
            id={producto.id}
            nombre={producto.nombre}
            precio={producto.precio}
            moneda={producto.moneda}
            descripcion={producto.descripcion}
            imagen={producto.primerImagen}
            destacado={producto.destacado}
            tags={producto.tags}
          />
        ))}
      </div>
    </section>
  )}

  <!-- CTA Section -->
