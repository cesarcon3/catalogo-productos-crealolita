  <div class="breadcrumb">
    <a href="/">‚Üê Volver al cat√°logo</a>
  </div>

  <div class="producto-container">
    <!-- Galer√≠a de im√°genes -->
    <div class="galeria-section">
      <ProductGallery 
        productId={producto.id}
        images={imagenes}
        productName={producto.nombre}
      />
    </div>

    <!-- Informaci√≥n del producto -->
    <div class="info-section">
      <h1>{producto.nombre}</h1>
      
      <div class="precio-container">
        <span class="precio">
          {producto.moneda === "USD" ? "$" : producto.moneda} {producto.precio.toFixed(2)}
        </span>
        {producto.disponible ? (
          <span class="disponibilidad disponible">‚úì Disponible</span>
        ) : (
          <span class="disponibilidad no-disponible">‚úó No disponible</span>
        )}
      </div>

      <p class="descripcion">{producto.descripcion}</p>

      <!-- Caracter√≠sticas -->
      {producto.caracteristicas && producto.caracteristicas.length > 0 && (
        <div class="caracteristicas">
          <h3>üìã Caracter√≠sticas</h3>
          <ul>
            {producto.caracteristicas.map(caracteristica => (
              <li>{caracteristica}</li>
            ))}
          </ul>
        </div>
      )}

      <!-- Personalizaci√≥n -->
      {producto.personalizacion?.disponible && (
        <div class="personalizacion">
          <h3>‚ú® Personalizaci√≥n disponible</h3>
          <div class="opciones-personalizacion">
            {producto.personalizacion.opciones.map(opcion => (
              <span class="opcion-tag">{opcion}</span>
            ))}
          </div>
        </div>
      )}

      <!-- Tiempo de producci√≥n -->
      {producto.tiempoProduccion && (
        <div class="tiempo-produccion">
          <h3>‚è±Ô∏è Tiempo de producci√≥n</h3>
          <p>{producto.tiempoProduccion}</p>
        </div>
      )}

      <!-- Tags -->
      {producto.tags && producto.tags.length > 0 && (
        <div class="tags-container">
          {producto.tags.map(tag => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      )}

      <!-- CTA -->
      <div class="cta-container">
        <a href="#" class="btn-primary">
          üí¨ Solicitar por WhatsApp
        </a>
        <p class="nota">Menciona el c√≥digo: <strong>{producto.id}</strong></p>
      </div>
    </div>
  </div>

  <!-- Productos relacionados (placeholder) -->
  <section class="relacionados">
    <h2>Tambi√©n te puede interesar</h2>
    <p class="coming-soon">M√°s productos pr√≥ximamente...</p>
  </section>
