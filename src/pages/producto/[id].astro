---
import Layout from '../../layouts/Layout.astro';
import ProductGallery from '../../components/ProductGallery.astro';
import fs from 'fs';
import path from 'path';

// Interfaces para tipar los datos del producto
interface Personalizacion {
  disponible: boolean;
  opciones: string[];
}

interface Producto {
  id: string;
  nombre: string;
  descripcion: string;
  precio: number;
  moneda: string;
  disponible: boolean;
  caracteristicas?: string[];
  personalizacion?: Personalizacion;
  tiempoProduccion?: string;
  tags?: string[];
}

interface StaticPath {
  params: { id: string };
  props: {
    producto: Producto;
    imagenes: string[];
  };
}

export function getStaticPaths(): StaticPath[] {
  const productosDir = path.join(process.cwd(), 'src/content/productos');
  const carpetas = fs.readdirSync(productosDir).filter(item => {
    const itemPath = path.join(productosDir, item);
    return fs.statSync(itemPath).isDirectory();
  });

  const paths: StaticPath[] = [];
  
  for (const carpeta of carpetas) {
    const infoPath = path.join(productosDir, carpeta, 'info.json');
    
    if (fs.existsSync(infoPath)) {
      const info: Producto = JSON.parse(fs.readFileSync(infoPath, 'utf-8'));
      
      // Obtener las im√°genes
      const productPath = path.join(productosDir, carpeta);
      const archivos = fs.readdirSync(productPath);
      const imagenes = archivos
        .filter(file => file.match(/\.(jpg|jpeg|png|webp)$/i))
        .sort((a, b) => {
          const numA = parseInt(a.match(/\d+/)?.[0] || '0');
          const numB = parseInt(b.match(/\d+/)?.[0] || '0');
          return numA - numB;
        });
      
      paths.push({
        params: { id: info.id },
        props: { 
          producto: info,
          imagenes: imagenes.length > 0 ? imagenes : ['1.jpg']
        }
      });
    }
  }
  
  return paths;
}

const { id } = Astro.params;
const { producto, imagenes }: { producto: Producto; imagenes: string[] } = Astro.props;

// Crear el mensaje de WhatsApp con la informaci√≥n del producto
const whatsappMessage = `Hola! Me interesa el producto "${producto.nombre}" (C√≥digo: ${producto.id}) que vi en su cat√°logo. ¬øPodr√≠an darme m√°s informaci√≥n?`;
const whatsappUrl = `https://api.whatsapp.com/send?phone=584161452966&text=${encodeURIComponent(whatsappMessage)}`;
---

<Layout title={producto.nombre} description={producto.descripcion}>
  <div class="breadcrumb">
    <a href="/">‚Üê Volver al cat√°logo</a>
  </div>

  <div class="producto-container">
    <div class="galeria-section">
      <ProductGallery 
        productId={producto.id}
        images={imagenes}
        productName={producto.nombre}
      />
    </div>

    <div class="info-section">
      <h1>{producto.nombre}</h1>
      
      <div class="precio-container">
        <span class="precio">
          {producto.moneda === "USD" ? "$" : producto.moneda} {producto.precio.toFixed(2)}
        </span>
        {producto.disponible ? (
          <span class="disponibilidad disponible">‚úì Disponible</span>
        ) : (
          <span class="disponibilidad no-disponible">‚úó No disponible</span>
        )}
      </div>

      <p class="descripcion">{producto.descripcion}</p>

      {producto.caracteristicas && producto.caracteristicas.length > 0 && (
        <div class="caracteristicas">
          <h3>üìã Caracter√≠sticas</h3>
          <ul>
            {producto.caracteristicas.map((caracteristica: string) => (
              <li>{caracteristica}</li>
            ))}
          </ul>
        </div>
      )}

      {producto.personalizacion?.disponible && (
        <div class="personalizacion">
          <h3>‚ú® Personalizaci√≥n disponible</h3>
          <div class="opciones-personalizacion">
            {producto.personalizacion.opciones.map((opcion: string) => (
              <span class="opcion-tag">{opcion}</span>
            ))}
          </div>
        </div>
      )}

      {producto.tiempoProduccion && (
        <div class="tiempo-produccion">
          <h3>‚è±Ô∏è Tiempo de producci√≥n</h3>
          <p>{producto.tiempoProduccion}</p>
        </div>
      )}

      {producto.tags && producto.tags.length > 0 && (
        <div class="tags-container">
          {producto.tags.map((tag: string) => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      )}

      <div class="cta-container">
        <a href={whatsappUrl} class="btn-primary" target="_blank">
          üí¨ Consultar por WhatsApp
        </a>
      </div>
    </div>
  </div>

</Layout>

